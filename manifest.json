{
  "manifest_version": 2,

  "name": "RevMine",
  "description": "Make that buying decision!",
  "version": "2.2",

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://api.revmine.tk/",
    "http://fonts.googleapis.com/",
    "tabs"
  ],
  "background": {
  	"scripts": ["bg.js"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "128": "icon.png"
  }
}
